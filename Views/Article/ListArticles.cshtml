@model IEnumerable<ProductCatalog.Models.Article>
@{
    ViewData["Title"] = "Article List";
}

<h2>@ViewData["ArticleType"] Articles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Publication Year</th>
            <th>View Count</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Genre</td>
                <td>@article.PublicationYear</td>
                <td>@article.ViewCount</td>
                <td>
                    <a href="@Url.Action("ShowArticle", "Article", new { articleId = article.ArticleId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
