@model ProductCatalog.Models.Article

@{
    ViewData["Title"] = "Edit Article";
}

<h2>Edit Article</h2>

<form asp-controller="Article" asp-action="EditArticle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="ArticleId" hidden/>
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Genre">Genre</label>
        <input asp-for="Genre" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ArticleType">Article Type</label>
        @Html.DropDownListFor(model => model.ArticleType,
                 new SelectList(new[] { "DVD", "CD", "book", "other" }, Model.ArticleType),
                 "Select Article Type",
                 new { @class = "form-control" })
        <span asp-validation-for="ArticleType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PublicationYear">Publication Year</label>
        <input asp-for="PublicationYear" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ContentText">Content Text</label>
        <textarea asp-for="ContentText" class="form-control" rows="5" required ></textarea>
        <span asp-validation-for="ContentText" class="text-danger"></span>
    </div>
    <div class="my-2">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-controller="User" asp-action="MyArticles" class="btn btn-secondary">Cancel</a>
    </div>
</form>

