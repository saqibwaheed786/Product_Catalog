@model ProductCatalog.Models.Article

@{
    ViewData["Title"] = "Create Article";
}

<h2>Create New Article</h2>
<form asp-controller="Article" asp-action="CreateArticle" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" required/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Genre">Genre</label>
        <input asp-for="Genre" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ArticleType">Article Type</label>
        @Html.DropDownListFor(model => model.ArticleType,
                 new SelectList(new[] { "DVD", "CD", "book", "other" }),
                 "Select Article Type",
                 new { @class = "form-control" })
        <span asp-validation-for="ArticleType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PublicationYear">Publication Year</label>
        <input asp-for="PublicationYear" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ContentText">Content Text</label>
        <textarea asp-for="ContentText" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="ContentText" class="text-danger"></span>
    </div>
    <div class="my-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Article" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>


