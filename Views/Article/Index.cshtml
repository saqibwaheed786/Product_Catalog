@model IEnumerable<ProductCatalog.Models.Article>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="jumbotron">
    <h1 class="display-6">Product Catalog Dashboard</h1>
    <p class="lead">Welcome to the dashboard. Click on an article type to view the list.</p>
</div>

<div>

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Publication Year</th>
                    <th>View Count</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)
                {
                    <tr>
                        <td>@article.Title</td>
                        <td>@article.Genre</td>
                        <td>@article.PublicationYear</td>
                        <td>@article.ViewCount</td>
                        <td>
                            <a href="@Url.Action("EditArticle", "Article", new { articleId = article.ArticleId })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("ShowArticle", "Article", new { articleId = article.ArticleId })" class="btn btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("CreateArticle", "Article")" class="btn btn-success">Create New Article</a>
    }
    else
    {
@*         <p>No articles available.</p>
 *@        <a href="@Url.Action("CreateArticle", "Article")" class="btn btn-success">Create New Article</a>
    }
</div>
