@model ProductCatalog.Models.User
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}
<div class="row justify-content-center">
    <div class="col-md-4 my-5 p-3 border rounded-3">
        <div class="display-6 text-center">
            <b>Product Catalog</b>
            <br />
            Login
        </div>

        <form asp-controller="User" asp-action="Login" method="post" class="form-inline">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Login" class="sr-only">Username:</label>
                <input type="text" class="form-control" asp-for="Login" placeholder="Username" required>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="sr-only">Password:</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mt-2 w-50">Login</button>
            </div>
        </form>

    </div>
</div>
